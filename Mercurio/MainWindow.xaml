<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Mercurio.MainWindow"
        Title="Mercurio Secure Communicator" Height="419" Width="598" Loaded="OnLoaded">
    <Grid Margin="0,0,0,56">
        <StackPanel x:Name="spMain" Height="333" VerticalAlignment="Top" Orientation="Horizontal">
            <DataGrid x:Name="dgUsers" ItemsSource="{Binding}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colUsers" Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Width="100" Header="Contact Name"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Grid Height="59" Margin="0,333,0,-59" VerticalAlignment="Top">
            <Button x:Name="btnInvite" Content="Invite" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnInvite_Click"/>
        </Grid>
    </Grid>
</Window>
