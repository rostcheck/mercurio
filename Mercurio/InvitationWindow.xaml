<Window x:Class="Mercurio.InvitationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="txtAddress" Loaded="OnLoaded">
        <Button x:Name="btnInvite_" Content="Send Invitation" HorizontalAlignment="Left" Margin="313,123,0,0" VerticalAlignment="Top" Width="104" Click="btnInvite__Click"/>
        <TextBox x:Name="txtAddress1" HorizontalAlignment="Left" Height="23" Margin="139,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278"/>
        <TextBox x:Name="txtEvidence" HorizontalAlignment="Left" Height="23" Margin="139,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278"/>
        <Label x:Name="lblAddress" Content="Address to invite:" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="-8.789,0.346" Width="124"/>
        <Label x:Name="lblEvidence" Content="Evidence URL:" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" RenderTransformOrigin="-8.789,0.346" Width="85"/>
        <TextBox x:Name="txtUserID" HorizontalAlignment="Left" Height="23" Margin="139,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278"/>
        <Label x:Name="lblUserID" Content="User ID:" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="-8.789,0.346" Width="124"/>

    </Grid>
</Window>
